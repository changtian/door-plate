/**index.wxss**/

.container {
    background: #f5f5f5;
    min-height: 100vh;
  }
  
  .picker-content {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 15rpx 30rpx;
    background: #f8f8f8;
    border-radius: 50rpx;
  }
  
  .selected-building {
    font-size: 28rpx;
    color: #333;
  }

  .filter-bar {
    display: flex;
    gap: 20rpx;
    padding: 20rpx;
    background: #fff;
    border-bottom: 1rpx solid #eee;
  }
  
  .filter-item {
    flex: 1;
    height: 72rpx;
    background: #f8f8f8;
    border-radius: 40rpx;
    padding: 0 24rpx;
    display: flex;
    align-items: center;
  }
  
  .filter-box {
    display: flex;
    align-items: center;
    height: 100%;
  }
  
  .filter-icon {
    width: 32rpx;
    height: 32rpx;
    margin-right: 12rpx;
  }
  
  .filter-text {
    font-size: 28rpx;
    color: #333;
  }
  
  .search-box {
    position: relative;
    display: flex;
    align-items: center;
  }
  
  .search-input {
    flex: 1;
    height: 100%;
    font-size: 28rpx;
    color: #333;
    padding-right: 60rpx;
  }
  
  .clear-btn {
    position: absolute;
    right: 20rpx;
    top: 50%;
    transform: translateY(-50%);
    padding: 8rpx;
  }
  
  .clear-icon {
    width: 32rpx;
    height: 32rpx;
    opacity: 0.6;
  }
  
  .arrow-icon {
    width: 24rpx;
    height: 24rpx;
    margin-left: 10rpx;
  }
  
  .neighbor-list {
    height: calc(100vh - 100rpx);
    padding: 20rpx;
  }
  
  .neighbor-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
  }
  
  .neighbor-card {
    background: #fff;
    border-radius: 16rpx;
    padding: 20rpx;
    position: relative;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  }
  
  .neighbor-avatar {
    width: 100%;
    height: 240rpx;
    border-radius: 12rpx;
    margin-bottom: 20rpx;
  }
  
  .info-container {
    margin-bottom: 40rpx;
  }
  
  .neighbor-name {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 10rpx;
    display: block;
  }
  
  .location-info {
    display: flex;
    gap: 10rpx;
    margin-bottom: 15rpx;
  }
  
  .location-info text {
    font-size: 24rpx;
    color: #666;
    background: #f5f5f5;
    padding: 4rpx 12rpx;
    border-radius: 8rpx;
  }
  
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 10rpx;
  }
  
  .tag {
    font-size: 22rpx;
    color: #4a90e2;
    padding: 4rpx 12rpx;
    background: rgba(74,144,226,0.1);
    border-radius: 8rpx;
  }
  
  .contact-btn {
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    line-height: 1.4;
    background: #4a90e2;
    color: #fff;
    border-radius: 30rpx;
  }
  
  .empty-tip {
    text-align: center;
    padding: 100rpx 0;
  }
  
  .empty-img {
    width: 200rpx;
    height: 200rpx;
    opacity: 0.5;
  }
  
  .empty-text {
    display: block;
    color: #999;
    margin-top: 20rpx;
  }